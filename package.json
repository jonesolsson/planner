{
  "name": "planner",
  "version": "1.0.0",
  "author": "Jonas",
  "scripts": {
    "start": "concurrently \"npm run watch\" \"npm run assets\" \"yarn client\"",
    "client": "cd client && yarn start",
    "watch": "nodemon ./build/server.js",
    "assets": "webpack -w --mode development --config webpack.config.js",
    "test": "./node_modules/jest/bin/jest.js"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "server"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**",
      "!**/webpack.config.js"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/mongoose": "^5.2.5",
    "@types/mongoose-promise": "^4.5.7",
    "@types/prop-types": "^15.5.5",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^23.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "typescript": "^2.8.4",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.4"
  },
  "dependencies": {
    "@types/cors": "^2.8.4",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "mobx": "^4.3.0",
    "mobx-react": "^5.1.2",
    "moment": "^2.22.2",
    "mongoose": "^5.2.8",
    "mongoose-delete": "^0.4.0",
    "styled-components": "^3.4.2"
  }
}
