{
  "files": ["server/server.ts"],
  "include": ["server/*"],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "noUnusedLocals": false,
    "paths": {
      "*": ["node_modules/@types/*", "./server/types/*"]
    }
  }
}
